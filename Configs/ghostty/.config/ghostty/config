# Documentation
# ghostty +show-config --default --docs | nvim

# Theme
# ghostty +list-themes
theme = Dracula

# Fonts
# ghostty +list-fonts
font-family = "JetBrainsMono Nerd Font Mono"
window-title-font-family = "JetBrainsMono Nerd Font Mono"
font-size = 16

# MacOS Settings
confirm-close-surface = false
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true

# Window Settings
background-opacity = 0.90
background-blur-radius = 40

# Keymaps
# keybind = global:cmd+grave_accent=toggle_quick_terminal
keybind = ctrl+t=new_tab
keybind = shift+left=previous_tab
keybind = shift+right=next_tab
keybind = ctrl+shift+left=move_tab:-1
keybind = ctrl+shift+right=move_tab:1

# Terminal Settings
copy-on-select = true
